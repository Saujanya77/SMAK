rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Blog images
    match /blog-images/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 10 * 1024 * 1024 && // 10MB limit
        resource.contentType.matches('image/.*');
    }
    
    // Case studies
    match /case-studies/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 50 * 1024 * 1024; // 50MB limit
    }
    
    // Clinical cases
    match /clinical-cases/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 50 * 1024 * 1024;
    }
    
    // Journal covers (per user folder)
    match /journal-covers/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        resource.size < 10 * 1024 * 1024 &&
        (resource.contentType.matches('image/.*') || resource.contentType == 'image/jpeg');
    }
    
    // Portraits (profile images)
    match /portraits/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 5 * 1024 * 1024 &&
        resource.contentType.matches('image/.*');
    }
    
    // Lab reports
    match /lab-reports/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 20 * 1024 * 1024;
    }
    
    // Medical posts
    match /medical-posts/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 50 * 1024 * 1024;
    }
    
    // Notes
    match /notes/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 50 * 1024 * 1024;
    }
    
    // Question banks
    match /question-banks/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 20 * 1024 * 1024;
    }
    
    // Thumbnails
    match /thumbnails/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 10 * 1024 * 1024 &&
        resource.contentType.matches('image/.*');
    }
    
    // Tutorials
    match /tutorials/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 100 * 1024 * 1024;
    }
    
    // Videos
    match /videos/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        resource.size < 500 * 1024 * 1024 && // 500MB limit
        resource.contentType.matches('video/.*');
    }
    
    // Deny access to anything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}