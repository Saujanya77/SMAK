rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin (case-insensitive)
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email_verified == true &&
             (
               request.auth.token.email == 'admin@example.com' ||
               request.auth.token.email == 'anotheradmin@example.com' ||
               request.auth.token.email == 'smak.founder@gmail.com' ||
               request.auth.token.email == 'smak.researchclub@gmail.com' ||
               request.auth.token.email == 'smak.quizclub@gmail.com' ||
               request.auth.token.email == 'sjmsr.journal@gmail.com' ||
               request.auth.token.email == 'team.smak2025@gmail.com' ||
               request.auth.token.email == 'khushal.smak@gmail.com' ||
               request.auth.token.email == 'samudra.smak@gmail.com'
             );
    }
    
    // Members collection - public read, admin write
    match /members/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Events collection - public read, admin write
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Past events collection - public read, admin write
    match /pastEvents/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Registrations collection - anyone can read/write
    match /registrations/{registrationId} {
      allow read, write: if true;
    }
    
    // Partners collection - public read, admin write
    match /partners/{partnerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Leadership collection - public read, admin write
    match /leadership/{leaderId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Video Lectures collection - public read, anyone can write (for uploading)
    match /videoLectures/{videoId} {
      allow read: if true;
      allow create: if true;  // Allow anyone to upload videos (they get status: 'pending' until approved)
      allow update: if isAdmin();  // Only admins can approve/update
      allow delete: if isAdmin();
    }
    
    // Courses collection - public read, admin write
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Research Club Members collection - public read, admin write
    match /researchClubMembers/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Research Club Mentors collection - public read, admin write
    match /researchClubMentors/{mentorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Quizzes collection - public read, admin write
    match /quizzes/{quizId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Achievements collection - public read, admin write
    match /achievements/{achievementId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Testimonials collection - public read, admin write
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact Info collection - public read, admin write
    match /contactInfo/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // SMAK AI Enquiries collection - anyone can write, admin can read
    match /smakAIEnquiries/{enquiryId} {
      allow read: if isAdmin();
      allow create: if true;  // Allow anyone to submit enquiries
      allow update: if false;
      allow delete: if isAdmin();
    }
    
    // Users collection - users can create their own document during registration
    // Users can read and update their own data, admins can read/write all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Allow all reads for backward compatibility (temporary)
    // You can remove this after verifying all collections are covered above
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
